<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.usuario.venderapp" >

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--
 To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" /> <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" /> <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ciudad_celeste_logo_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:icon="@drawable/ciudad_celeste_logo_icon">

        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".Activity_Urbanizacion"
            android:label="@string/title_activity_urbanizacion_"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_application"
            android:windowSoftInputMode="adjustResize|stateHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity_Lotes"
            android:label="@string/title_activity_activity__lotes"
            android:parentActivityName=".MainActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.usuario.venderapp.MainActivity" />
        </activity>
        <activity
            android:name=".Activity_Modelos"
            android:label="@string/title_activity_activity_modelos"
            android:parentActivityName=".Activity_Lotes">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.usuario.venderapp.Activity_Lotes" />
        </activity>
        <activity
            android:name=".Visor.SingleTouchImageViewActivity"
            android:label="Visor de UrbanizaciÃ³n"
            android:parentActivityName=".Activity_Lotes">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.usuario.venderapp.Activity_Lotes" />

        </activity>
        <activity
            android:name=".Visor.ViewPagerActivity"
            android:label="Visor de Modelos"
            android:parentActivityName=".Activity_Modelos">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.usuario.venderapp.Activity_Modelos" />

        </activity>
    </application>

</manifest>
